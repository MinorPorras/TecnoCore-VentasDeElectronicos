<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Inventario_Productos_Tecnologicos</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/adminNavBar.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav>
        <div class="nav-principal">
            <a asp-action="Index" asp-controller="Home">
                <img src="~/img/LightLogo.png" alt="Tecno_Core Logo" class="logo"/>
            </a>
            <ul>
                <li><a asp-action="Mantenimiento" asp-controller="Home">Inicio</a></li>
                <li  class="dropdown-container">
                    <a class="dropbtn" asp-action="Index" asp-controller="Usuarios">Usuarios</a>
                    <div class="dropdown-content">
                        <a asp-action="Index" asp-controller="Roles">Roles</a>
                    </div>
                </li>
                <li class="dropdown-container">
                    <a class="dropbtn" asp-action="Index" asp-controller="Productos">Productos</a>
                    <div class="dropdown-content">
                        <a asp-action="Index" asp-controller="Categorias">Categorías</a>
                        <a asp-action="Index" asp-controller="Atributos">Atributos</a>
                        <a asp-action="Index" asp-controller="Kardex">Kardex</a>
                    </div>
                </li>
                <li class="dropdown-container">
                    <a class="dropbtn" asp-action="Index" asp-controller="Ventas">Ventas</a>
                    <div class="dropdown-content">
                        <a asp-action="Cupones" asp-controller="Ventas">Cupones</a>
                        <a asp-action="Metodos_de_Pago" asp-controller="Ventas">Métodos de pago</a>
                    </div>
                </li>
                <li class="dropdown-container">
                    <a class="dropbtn" asp-action="Index" asp-controller="Pedidos">Pedidos</a>
                    <div class="dropdown-content">
                        <a asp-action="Estados_Pedidos" asp-controller="Pedidos">Estados</a>
                    </div>
                </li>
            </ul>
            <div class="nav-account" id="showLogin">
                <img
                    src="~/img/ICO_User.svg"
                    alt="cuenta"
                    class="nav-icon"
                    id="user-account"/>
                <label for="user-account">Cuenta</label>
            </div>
        </div>
    </nav>
</header>
<div class="main_container">
    <main>
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Tecno Core - Num: 8888-8888 Dirección: Calle 123, Ciudad ...
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/admin.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>