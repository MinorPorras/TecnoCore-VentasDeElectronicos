@model IEnumerable<Categoria>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Inventario_Productos_Tecnologicos</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/navBar.css"/>
</head>
<body>
<header>
    <nav>
        <div class="nav-principal">
            <a asp-action="Index" asp-controller="Home">
                <img src="~/img/LightLogo.png" alt="Tecno_Core Logo" class="logo"/>
            </a>
            <ul>
                <li><a asp-action="index" asp-controller="Home">Inicio</a></li>
                @await Component.InvokeAsync("Categories")
            </ul>

            <div class="nav-account" id="showLogin">
                <img
                    src="~/img/ICO_User.svg"
                    alt="cuenta"
                    class="nav-icon"
                    id="user-account"/>
                <label for="user-account">Cuenta</label>
            </div>
        </div>

        <div class="search-bar">
            <input type="text" placeholder="Buscar..." class="search-input"/>
            <button class="button-78" role="button">Buscar</button>
            <div class="nav-cart">
                <a asp-action="Carro_Compras" asp-controller="Ventas">
                    <img
                        src="~/img/ICO_Cart.svg"
                        alt="compras"
                        class="nav-cart-icon"
                        id="shopping-cart"/>
                </a>
                <label for="shopping-cart">₡ 0.00</label>
            </div>
        </div>
    </nav>
</header>
<div class="main_container">
    <main>
        @RenderBody()
    </main>
</div>

<dialog id="loginModal">
    <form asp-action="login" asp-controller="Home" method="post" class="modalContent">
        <h2>Inicio de sesión</h2>
        <label for="email">Correo:</label>
        <input type="text" id="email" name="email" class="" required/>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" class="" required/>
        <div class="form-group">
            <button type="submit" class="btnLogin">Iniciar sesión</button>
            <button type="button" class="btnClose" id="closeLogin">Cerrar</button>
        </div>
    </form>
</dialog>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Tecno Core - Num: 8888-8888 Dirección: Calle 123, Ciudad ...
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>