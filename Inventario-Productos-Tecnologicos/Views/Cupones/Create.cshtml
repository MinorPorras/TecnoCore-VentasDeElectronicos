@model Inventario_Productos_Tecnologicos.Models.TECO_M_Cupon

@{
    ViewBag.Title = "Agregar cupón";
    Layout = "_LayoutAdmin";
}
<div class="cuponesForm">
    <h2>@ViewBag.Title</h2>
    <form asp-action="Create" method="Post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="TC_Codigo" class="control-label">Código</label>
            <input class="form-control" name="TC_Codigo" id="TC_Codigo" placeholder="Código que usaran los clientes"
                   type="text"/>
            <span asp-validation-for="TC_Codigo" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label for="TC_Descripcion">Descripción</label>
            <textarea name="TC_Descripcion" id="TC_Descripcion" class="form-control" rows="3"></textarea>
            <span asp-validation-for="TC_Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TC_TipoDescuento">Tipo de Descuento</label>
            <select name="TC_TipoDescuento" id="TC_TipoDescuento" class="form-control"
                    asp-items="@ViewBag.TipoDescuento" required>
            </select>
            <span asp-validation-for="TC_TipoDescuento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TN_Valor" class="control-label">Valor</label>
            <span id="symbolColon">₡</span>
            <input class="form-control" name="TN_Valor" id="TN_Valor" type="number"/>
            <span id="symbolPorc">%</span>
        </div>
        <div>
            <label for="TF_FechaInicio">Fecha de inicio:</label>
            <input type="date" id="TF_FechaInicio" name="TF_FechaInicio" class="form-control" required/>
            <span asp-validation-for="TF_FechaInicio" class="text-danger"></span>
        </div>
        <div>
            <label for="TF_FechaFin">Fecha de finalización:</label>
            <input type="date" id="TF_FechaFin" name="TF_FechaFin" class="form-control" required/>
        </div>
        <div class="form-group">
            <label for="TN_UsosMaximos">Usos máximos</label>
            <input id="TN_UsosMaximos" name="TN_UsosMaximos" class="form-control"/>
            <span asp-validation-for="TN_UsosMaximos" class="text-danger"></span>
        </div>
        <div class="formgroup">
            <label>Estado:</label>
            <div>
                <input type="radio" name="TB_Activo" id="active" value="true" checked>
                <label for="active">Activo</label>

                <input type="radio" name="TB_Activo" id="inactive" value="false">
                <label for="inactive">Inactivo</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="reset" class="btn btn-secondary">Limpiar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
