@model Inventario_Productos_Tecnologicos.Models.Productos

@{
    ViewBag.Title = "Crear Producto";
    Layout = "_LayoutAdmin";
}

<h1>Crear nuevo Producto</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Imagen"></label>
        <input asp-for="Imagen" class="form-control" type="file" accept="image/*" 
               onchange="mostrarImagen(this)" id="imgSelector"/>
        <span asp-validation-for="Imagen" class="text-danger"></span>
        <img id="preview" src="" alt="Vista previa" style="max-width: 200px; margin-top: 10px; display: none"/>
    </div>

    <div class="form-group form-check">
        <input asp-for="Novedad" class="form-check-input" />
        <label asp-for="Novedad" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="MarcaId"></label>
        <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId">
            <option value="">-- Seleccione Marca --</option>
        </select>
        <span asp-validation-for="MarcaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubcategoriaId"></label>
        <select asp-for="SubcategoriaId" class="form-control" asp-items="ViewBag.SubcategoriaId">
            <option value="">-- Seleccione Subcategoría --</option>
        </select>
        <span asp-validation-for="SubcategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
