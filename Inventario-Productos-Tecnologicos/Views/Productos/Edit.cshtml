@model Inventario_Productos_Tecnologicos.Models.Productos

@{
    ViewBag.Title = "Editar Producto";
    Layout = "_LayoutAdmin";
}

<h1>Editar Producto</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Imagen"></label>
        <input asp-for="Imagen" class="form-control" />
        <small>Coloca la URL de la imagen</small>
        <span asp-validation-for="Imagen" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Novedad" class="form-check-input" />
        <label asp-for="Novedad" class="form-check-label"></label>
    </div>

    <div class="form-group form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="MarcaId"></label>
        <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId">
            <option value="">-- Seleccione Marca --</option>
        </select>
        <span asp-validation-for="MarcaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubcategoriaId"></label>
        <select asp-for="SubcategoriaId" class="form-control" asp-items="ViewBag.SubcategoriaId">
            <option value="">-- Seleccione Subcategoría --</option>
        </select>
        <span asp-validation-for="SubcategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
