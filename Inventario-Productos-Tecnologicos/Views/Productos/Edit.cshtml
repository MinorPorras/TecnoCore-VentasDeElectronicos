@model Inventario_Productos_Tecnologicos.Models.Productos

@{
    ViewBag.Title = "Editar Producto";
    Layout = "_LayoutAdmin";
}

<h1>Editar Producto</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control"
               value="@Model.Precio.ToString(System.Globalization.CultureInfo.InvariantCulture)"
               step="0.01" min="0" type="number"/>
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock">Gestión de inventario</label>
        <a asp-controller="Productos" asp-action="CreateKardexEntry" asp-route-id="@Model.Id">Entrada de inventario</a>
        <a asp-controller="Productos" asp-action="CreateKardexExit" asp-route-id="@Model.Id">Salida de inventario</a>

    </div>

    <div class="form-group">
        <label asp-for="Imagen"></label>
        <input name="imagen" class="form-control" type="file" accept="image/*"
               onchange="mostrarImagen(this)" id="imgSelector" value="@Model.Imagen"/>
        <img id="preview" src="@Model.Imagen" alt="@Model.Nombre"
             style="max-width: 200px; margin-top: 10px; @(string.IsNullOrEmpty(Model.Imagen) ? "display: none" : "")"/>
    </div>

    <div class="form-group form-check">
        <input asp-for="Novedad" class="form-check-input"/>
        <label asp-for="Novedad" class="form-check-label"></label>
    </div>

    <div class="formgroup">
        <label>Estado:</label>
        <div>
            <input type="radio" name="Activo" id="active" value="true" @(Model.Activo == true ? "checked" : "")>
            <label for="active">Activo</label>

            <input type="radio" name="Activo" id="inactive" value="false" @(Model.Activo == false ? "checked" : "")>
            <label for="inactive">Inactivo</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="MarcaId"></label>
        <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId">
            <option value="">-- Seleccione Marca --</option>
        </select>
        <span asp-validation-for="MarcaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubcategoriaId"></label>
        <select asp-for="SubcategoriaId" class="form-control" asp-items="ViewBag.SubcategoriaId">
            <option value="">-- Seleccione Subcategoría --</option>
        </select>
        <span asp-validation-for="SubcategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
