@model Inventario_Productos_Tecnologicos.Models.Productos

@{
    ViewBag.Title = "Detalle - " + Model.Nombre;
    Layout = "_LayoutAdmin";
}

<h1>Detalle del Producto</h1>

<div>
    <h4>@Model.Nombre</h4>
    <dl class="row">
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Marca?.Nombre</dd>

        <dt class="col-sm-2">Subcategoría</dt>
        <dd class="col-sm-10">@Model.Subcategoria?.Nombre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>

        <dt class="col-sm-2">Novedad</dt>
        <dd class="col-sm-10">@(Model.Novedad ? "Sí" : "No")</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@(Model.Activo == true ? "Sí" : "No")</dd>

        @if (!string.IsNullOrEmpty(Model.Imagen))
        {
            <dt class="col-sm-2">Imagen</dt>
            <dd class="col-sm-10">
                <img src="@Model.Imagen" alt="Imagen de @Model.Nombre" style="max-width:200px; max-height:200px;"/>
            </dd>
        }
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</p>
