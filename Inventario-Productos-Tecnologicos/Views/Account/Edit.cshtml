@model TECO_A_Usuario

@{
    ViewBag.Title = "Actualizar Usuario";
    Layout = "_LayoutAdmin";
}

<div>
    <h2>Actualizar Usuario</h2>

    <form class="modifyElement">
        @Html.AntiForgeryToken()
        <input type="hidden" id="controller" name="controller" value="Usuarios"/>
        <input type="hidden" name="Id" value="@Model.Id"/>

        <div class="formgroup">
            <label asp-for="Email">Correo:</label>
            <input name="Email" type="email" class="form-control" value="@Model.Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        @*<div class="formgroup">
            <label asp-for="Nombre">Nombre:</label>
            <input name="Nombre" type="text" class="form-control" value="@Model.Nombre">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="formgroup">
            <label asp-for="Apellidos">Apellidos:</label>
            <input name="Apellidos" type="text" class="form-control" value="@Model.Apellidos">
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>
        <div class="formgroup">
            <label asp-for="Contrasena">Contraseña:</label>
            <input asp-for="Contrasena" type="password" class="form-control" value="@Model.Contrasena">
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>
        <div class="formgroup">
            <label asp-for="Telefono">Teléfono:</label>
            <input name="Telefono" type="tel" class="form-control" value="@Model.Telefono">
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="formgroup">
            <label>Rol:</label>
            <select name="Rol" class="form-control">
                @if (ViewBag.Roles != null)
                {
                    @foreach (var rol in ViewBag.Roles)
                    {
                        if (Model.Rol == rol.Id)
                        {
                            <option value="@rol.Id" selected>@rol.Name</option>
                        }
                        else
                        {
                            <option value="@rol.Id">@rol.Name</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="formgroup">
            <label>Estado:</label>
            <div>
                <input type="radio" name="Activo" id="active" value="true" @(Model.Activo == true ? "checked" : "")>
                <label for="active">Activo</label>

                <input type="radio" name="Activo" id="inactive" value="false" @(Model.Activo == false ? "checked" : "")>
                <label for="inactive">Inactivo</label>
            </div>
        </div>*@

        <div class="formgroup">
            <button type="button" id="updateBtn" class="btn btn-primary">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/admin.js"></script>
}

