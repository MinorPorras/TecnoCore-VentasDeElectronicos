@model Inventario_Productos_Tecnologicos.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Inicio de sesión";
    Layout = "_Layout";
}
<div class="loginContainer">
    <form asp-action="login" asp-controller="Usuarios" method="post" class="loginForm">
        <h2>Inicio de sesión</h2>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" type="text" class="form-control" required/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" required/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="loginActions">
            <p>No tiene cuenta? <a asp-action="Register" asp-controller="Usuarios">Registrarse</a></p>
        </div>
        <div class="form-group">
            <button type="submit" class="btnLogin">Iniciar sesión</button>
            <button type="button" class="btnClose" onclick="window.history.back()">Cerrar</button>
        </div>
    </form>
</div>
