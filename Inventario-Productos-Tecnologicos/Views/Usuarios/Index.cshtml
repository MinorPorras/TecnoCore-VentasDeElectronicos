@model List<Usuarios>

@{
    ViewBag.Title = "Usuarios";
    Layout = "_LayoutAdmin";
}
<div>
    <h2 class="pageTitle">@ViewBag.Title</h2>

    <form asp-action="Search" method="GET">
        <input type="text" id="searchElement" name="searchElement" placeholder="Buscar por nombre o Id:"
               value="@ViewBag.SearchString"/>
        <button type="submit" asp-action="Search">Buscar</button>
        <div class="radio-group">
            <label for="todos">Todos</label>
            <input type="radio" name="activeFilter" id="todos" value="all"
                   @(string.IsNullOrEmpty(ViewBag.ActiveFilter) || ViewBag.ActiveFilter == "all" ? "checked" : "")>
            <label for="active">Activo</label>
            <input type="radio" name="activeFilter" id="active" value="true"
                   @(ViewBag.ActiveFilter == "true" ? "checked" : "")/>
            <label for="Inactive">Inactivo</label>
            <input type="radio" name="activeFilter" id="Inactive" value="false"
                   @(ViewBag.ActiveFilter == "false" ? "checked" : "")/>
        </div>
        <label for="rol">Roles:</label>
        <select name="rol" id="rol">
            @if (ViewBag.Rol == "all" || ViewBag.Rol == null)
            {
                <option value="all" selected>Todos</option>
            }
            else
            {
                <option value="all">Todos</option>
            }
            @if (ViewBag.Roles != null)
            {
                @foreach (var rol in ViewBag.Roles)
                {
                    if (ViewBag.Rol == rol.Id.ToString())
                    {
                        <option value="@rol.Id" selected>@rol.Name</option>
                    }
                    else
                    {
                        <option value="@rol.Id">@rol.Name</option>
                    }
                }
            }
        </select>
    </form>
    <a asp-action="Create">Crear</a>


    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>email</th>
            <th>Tel√©fono</th>
            <th>Rol</th>
            <th>Estado</th>
            <th>Opciones</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="8" class="text-center bg-dark-subtle">No hay @ViewBag.Title</td>
            </tr>
        }
        else
        {
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Apellidos</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Telefono</td>
                    <td>@(usuario.RolNavigation?.Name ?? "Sin Rol")</td>
                    <td>
                        @if (usuario.Activo == true)
                        {
                            <span class="badge text-bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge text-bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@usuario.Id">Edit</a>
                        <button type="button" class="showModal" data-id="@usuario.Id" value="@usuario.Nombre">Eliminar
                        </button>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    @await Component.InvokeAsync("DeleteDialog", new { actionName = "Delete" })
</div>
