<section class="cardWrapper Novedades">
    <div class="InicioCard">
        <div class="title">Novedades</div>
        <div class="curve-three"></div>
        <div class="curve-four"></div>

        <section id="NewsCarousel" class="carousel slide novedad" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#NewsCarousel" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#NewsCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#NewsCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="5000">
                    <img src="img/BuildYourPC.jpg" class="d-block w-100" alt="Nueva Colección">
                    <div class="carousel-caption">
                        <h5>PC Ryzen 5 + RTX 2080</h5>
                        <p>Precio: 325.000</p>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="5000">
                    <img src="img/ComponentesPC.jpg" class="d-block w-100" alt="Ofertas Especiales">
                    <div class="carousel-caption">
                        <h5>Ryzen 7 9800x</h5>
                        <p>Precio: 309.000</p>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="5000">
                    <img src="img/perifericos.jpg" class="d-block w-100" alt="Próximamente">
                    <div class="carousel-caption">
                        <h5>Audífonos Sony</h5>
                        <p>Precio: 25.000</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#NewsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#NewsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </section>
    </div>
</section>

