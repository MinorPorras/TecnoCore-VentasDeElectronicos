@model Inventario_Productos_Tecnologicos.Models.Categorias

@{
    ViewBag.Title = "Detalle de Categoría";
    Layout = "_LayoutAdmin";
}

<h2>Detalle de Categoría</h2>

<div>
    <h4>@Model.Nombre</h4>
    <p><strong>Activo:</strong> @(Model.Activo == true ? "Sí" : "No")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
<p>
    <a asp-action="Index" class="btn btn-primary">Volver al listado de categorías</a>
