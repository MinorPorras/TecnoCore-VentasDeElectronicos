@model Inventario_Productos_Tecnologicos.Models.Categorias

@{
    ViewBag.Title = "Crear Categoría";
    Layout = "_LayoutAdmin";
}

<h2>Crear Categoría</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="formgroup">
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" class="form-control">
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="formgroup">
        <label asp-for="Activo">Estado:</label>
        <select asp-for="Activo" class="form-control">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
        <span asp-validation-for="Activo" class="text-danger"></span>
    </div>
    <div class="btngroup">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
